server {
        listen 80;
        listen [::]:80;
        listen 443 default ssl spdy;
        listen [::]:443 ssl spdy;

        server_name wiki.javnaknjiznica.org javnaknjiznica.org;

        if ($scheme != "https") {
           rewrite ^ https://$server_name$request_uri? redirect;
        }

        add_header Strict-Transport-Security max-age=31536000;

        ssl_certificate /etc/ssl/certs/lsb_domain.crt;
        ssl_certificate_key /etc/ssl/private/lsb_domain.key;

        root /var/www/mediawiki/;
        index index.php;
        access_log /var/log/nginx/wiki.javnaknjiznica.org-access.log;
        error_log /var/log/nginx/wiki.javnaknjiznia.org-error.log;

        if (!-e $request_filename) {
            rewrite /wp-admin$ $scheme://$host$uri/ permanent;
            rewrite ^(/[^/]+)?(/wp-.*) $2 last;
            rewrite ^(/[^/]+)?(/.*\.php) $2 last;
        }

        # location / {
        #     try_files $uri $uri/ /index.php?$args ;
        # }

        location / {
            try_files $uri $uri/ @rewrite;
        }

        location @rewrite {
            rewrite ^/(.*)$ /index.php?title=$1&$args;
        }

        location ^~ /maintenance/ {
            return 403;
        }

        location ~ \.php$ {
            try_files $uri /index.php;
            fastcgi_split_path_info ^(.+\.php)(/.+)$;
            fastcgi_pass php5:9000;
            fastcgi_index index.php;
            include fastcgi_params;
        }

        location ~* \.(js|css|png|jpg|jpeg|gif|ico)$ {
             try_files $uri /index.php;
             expires max;
             log_not_found off;
        }

        location = /_.gif {
             expires max;
             empty_gif;
        }

        location ^~ /cache/ {
             deny all;
        }

        location /dumps {
             root /var/www/mediawiki/local;
             autoindex on;
        }

        location = /robots.txt { access_log off; log_not_found off; }
        location ~ /\. { deny  all; access_log off; log_not_found off; }
}
